---
cluster_name: HAMMERDB-TPROCC-ORACLE
aws:
  ssh_user: rocky
  operating_system:
    name: Rocky-8-ec2-8.6-20220515.0.x86_64
    owner: 679593333241
  regions:
    {{ region }}:
      cidr_block: 10.0.0.0/16
      azs:
        {{ zone0 }}: 10.0.0.0/24
        {{ zone1 }}: 10.0.1.0/24
      service_ports:
        - port: 22
          protocol: tcp
          description: "SSH"
        - port: {{ db_port }}
          protocol: tcp
          description: "Oracle"

  machines:
    hammerdb-driver:
      type: hammerdb-driver
      region: {{ region }}
      az: {{ zone1 }}
      instance_type: {{ instance_type }}
      volume:
        type: gp2
        size_gb: 50
        iops: 5000
        encrypted: false

  databases:
    tprocc:
      region: {{ region }}
      engine: {{ db_engine }}
      engine_version: {{ db_version }}
      instance_type: {{ db_instance_type }}
      dbname: tprocc
      username: {{ db_superuser }}
      password: {{ db_password }}
      port: {{ db_port }}
      volume:
        size_gb: {{ db_storage_size }}
        type: {{ db_storage_type }}
        iops: {{ db_storage_iops }}
        encrypted: true
