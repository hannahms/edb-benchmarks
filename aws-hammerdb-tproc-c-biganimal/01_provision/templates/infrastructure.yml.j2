---
cluster_name: TPROCC-BigAnimal
aws:
  ssh_user: rocky
  operating_system:
    name: Rocky-8-ec2-8.6-20220515.0.x86_64
    owner: 679593333241
  regions:
    {{ region }}:
      cidr_block: 10.0.0.0/16
      azs:
        {{ zone0 }}: 10.0.0.0/24
      service_ports:
        - port: 22
          protocol: tcp
          description: "SSH"
        - port: 5432
          protocol: tcp
          description: "PostgreSQL"

  machines:
    hammerdb-driver:
      region: {{ region }}
      az: {{ zone0 }}
      instance_type: {{ driver_instance_type }}
      volume:
        type: gp2
        size_gb: 50
        iops: 5000
        encrypted: false
      tags:
        type: hammerdb-driver

  biganimal:
    tprocc:
      project:
        id: {{ ba_project_id }}
      region: {{ region }}
      type: single
      node_count: 1
      engine: {{ pg_engine }}
      engine_version: {{ pg_version }}
      instance_type: {{ pg_instance_type }}
      password: {{ pg_password }}
      volume:
        type: {{ pg_storage_type }}
        properties: {{ pg_storage_properties }}
        size_gb: {{ pg_storage_size }}
        iops: {{ pg_storage_iops }}
      tags:
        dbname: tprocc
