# The following template assumes postgres instances within AWS and
#   have additional attached storage devices based on the pg_instance_type and xdb_instance_type provided
aws:
  tags:
    cluster_name: TPCC-XDB-2-Nodes
    created_by: edb-benchmarks
  images:
    driver:
      name: Rocky-8-ec2-8.6-20220515.0.x86_64
      owner: 679593333241
      ssh_user: rocky
    postgres:
      name: {{ pg_image_name }}
      owner: {{ pg_image_owner }}
      ssh_user: {{ pg_ssh_user }}
  regions:
    {{ region }}:
      cidr_block: 10.0.0.0/16
      azs:
        {{ zone0 }}: 10.0.1.0/24
        {{ zone1 }}: 10.0.2.0/24
      service_ports:
        - port: 22
          protocol: tcp
          description: "SSH"
        - port: 5444
          protocol: tcp
          description: "EPAS"
        - port: 9051
          protocol: tcp
          description: "XDB - Pub"
        - port: 9052
          protocol: tcp
          description: "XDB - Sub"

  machines:
    hammerdb:
      image_name: driver
      tags:
        type: hammerdb
      region: {{ region }}
      az: {{ zone0 }}
      instance_type: {{ driver_instance_type }}
      volume:
        type: gp2
        size_gb: 50
        iops: 5000
        encrypted: false
    xdbserver:
      image_name: postgres
      tags:
        type: xdbserver
      region: {{ region }}
      az: {{ zone0 }}
      instance_type: {{ xdb_instance_type }}
      volume:
        type: gp2
        size_gb: 50
        iops: 5000
        encrypted: false
    xdb1:
      image_name: postgres
      tags:
        type: postgres
      region: {{ region }}
      az: {{ zone0 }}
      instance_type: {{ pg_instance_type }}
      volume:
        type: gp2
        size_gb: 50
        iops: 5000
        encrypted: false
    xdb2:
      image_name: postgres
      tags:
        type: postgres
      region: {{ region }}
      az: {{ zone1 }}
      instance_type: {{ pg_instance_type }}
      volume:
        type: gp2
        size_gb: 50
        iops: 5000
        encrypted: false
